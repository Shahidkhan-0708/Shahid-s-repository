#include <bits/stdc++.h>

using namespace std;
void bubblesort(int arr[], int n) {
    if (n == 1) {
        return;
    }
    for (int i = 0; i < n - 1; i++) {
        if (arr[i] > arr[i + 1]) {
            swap(arr[i + 1], arr[i]);

        }


    }
    bubblesort(arr, n - 1);


}


int main() {
    int arr[] = {
        10,
        7,
        6,
        3,
        2,
        1
    };
    int n = sizeof(arr) / sizeof(arr[0]);
    for (int i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }

    bubblesort(arr, n);
    cout << "the output is";
    for (int i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }

}
